<h1>タスク一覧</h1>
<table class="PostTable">
  <tr>
    <th>タスク名</th>
    <th>タスク詳細</th>
    <th>終了期限</th>
    <th>状態</th>
    <th>優先順位</th>
    <th>作者</th>
  </tr>
  <% @tasks.each do |task| %>
  <tr>
    <td><%= task.task_name %></td>
    <td><%= task.task_details %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td><%= task.author %></td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しくタスクを作成する', new_task_path %>
