<h2>タスク作成</h2>
<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="errors_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="task_name">
    <%= form.label :task_name %>
    <%= form.text_field :task_name %>
  </div>
  <div class="task_details">
    <%= form.label :task_details %>
    <%= form.text_field :task_details %>
  </div>
  <div class="deadline">
    <%= form.label :deadline %>
    <%= form.text_field :deadline %>
  </div>
  <div class="status">
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>
  <div class="priority">
    <%= form.label :priority %>
    <%= form.text_field :priority %>
  </div>
  <div class="author">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to 'タスク一覧', tasks_path%>