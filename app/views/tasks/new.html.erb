<%= form_with(model: @task, local: true) do |form| %>
  <div class="task_name">
    <%= form.label :task_name %>
    <%= form.text_field :task_name %>
  </div>
  <div class="task_details">
    <%= form.label :task_details %>
    <%= form.text_field :task_details %>
  </div>
  <div class="deadline">
    <%= form.label :deadline %>
    <%= form.text_field :deadline %>
  </div>
  <div class="status">
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>
  <div class="priority">
    <%= form.label :priority %>
    <%= form.text_field :priority %>
  </div>
  <div class="author">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>
  <%= form.submit %>
<% end %>